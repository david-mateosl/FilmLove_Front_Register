<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app"
        android:screenOrientation="portrait"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmLove_Front_Register"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ProducionesPorGeneroActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_produciones_por_genero"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".ProduccionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_produccion"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".GeneroActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_genero"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".SeriesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_serie"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".PeliculasActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_pelicula"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".FavoritoActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_favorito"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".PrincipalActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_principal"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.FilmLove_Front_Register" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.FilmLove_Front_Register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>