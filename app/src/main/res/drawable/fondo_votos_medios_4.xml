<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="20dp" /> <!-- Ajusta el radio según el nivel de redondez deseado -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Cambia el color del borde cuando se presiona -->
            <solid android:color="#CC7D28" /> <!-- Ajusta el color de fondo cuando se presiona -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20dp" /> <!-- Ajusta el radio según el nivel de redondez deseado -->
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- Cambia el color del borde predeterminado -->
            <solid android:color="#1B8E0A" /> <!-- Ajusta el color de fondo predeterminado -->
        </shape>
    </item>
</selector>